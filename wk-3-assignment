-- üßë‚Äçüéì Question 1: Create the student table
CREATE TABLE student (
    id INT PRIMARY KEY,
    fullName VARCHAR(100),
    age INT
);

-- ‚ûï Question 2: Insert at least 3 records into the student table
INSERT INTO student (id, fullName, age) VALUES
(1, 'Amina Otieno', 19),
(2, 'Brian Mwangi', 18),
(3, 'Cynthia Wanjiru', 20);

-- üîÑ Question 3: Update the age of the student with ID 2 to 20
UPDATE student
SET age = 20
WHERE id = 2;

